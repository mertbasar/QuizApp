@model QuizApp.Dto.CategoryDtos.CategoryDto
<div class="row">
    <div class="col-12">
        <h1>Kategori Güncelleme</h1>
    </div>
</div>
<div class="row">
    <div class="col-12 col-sm-8 col-md-6 col-lg-4">
        <form method="post" action="/Category/Update">
            @Html.HiddenFor(vm=>vm.Id)
            <label class="form-label">Kategori Adı</label>
            @Html.TextBoxFor(vm=>vm.Name, new{@class="form-control"})
            <button class="btn btn-outline-primary float-end" type="submit">Kategoriyi Güncelle</button>
        </form>
    </div>
</div>
