@model IEnumerable<QuizApp.Dto.CategoryDtos.CategoryDto>

<div class="row">
    <div class="col-12">

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Marka Adı</th> 
                    <th>Güncelleme</th>
                    <th>Silme</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {

                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>
                            <a class="btn btn-warning" asp-controller="Category" asp-action="Update" asp-route-id="@item.Id">Güncelle</a>
                        </td>
                        <td>
                            <form method="post" asp-controller="Category" asp-action="Delete">
                                <input type="hidden" name="Id" value="@item.Id" />
                                <button class="btn btn-danger">Sil</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <a class="btn btn-danger float-end" href="/Category/Create">Yeni Kategori Ekle</a>
    </div>

</div>
@section Scripts

    {
    <script>

        let formElements = document.getElementsByTagName('form');
        for(let i=0; i < formElements.length;i++)
        {
            formElements[i].addEventListener('submit',function (eventArgs) {

             let confirmed = confirm("Dikkat!! Bu kayıt silinecek devam etmek istiyor musunuz?");
             if(!confirmed){
                 eventArgs.preventDefault();
             }
            });
        }
    </script>
    }
