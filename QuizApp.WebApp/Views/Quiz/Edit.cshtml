@model QuizApp.Dto.QuizDtos.QuizDto
<h1>Quiz Güncelleme Sayfası</h1>
<div class="row">
    <div class="col-12 col-sm-8 col-md-6 col-lg-4">
        <form method="post" asp-controller="Quiz" asp-action="Edit">
            <input type="hidden" value="@Model.Id" />
            <div class="mt-2 form-group">
                <label>Marka Adı</label>
                <select class="form-select" asp-for=categoryId asp-items="ViewBag.CategorySelectList"></select>
            </div>
            <div class="form-group">
                <label asp-for="Name">Quiz Başlığı</label>
                <input class="form-control" asp-for="Name" />
            </div>
            <div class="form-group">
                <label asp-for="Description">Quiz Açıklaması</label>
                <input class="form-control" asp-for="Description" />
            </div>
            <div class="form-group">
                <label asp-for="QuestionCount">Soru Sayısı</label>
                <input class="form-control" asp-for="QuestionCount" />
            </div>
            <div class="mt-2">
                <button type="submit" class="btn btn-warning float-end">
                    Değişiklikleri Kaydet
                </button>
            </div>
        </form>
    </div>

</div>
